{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "types": ["globals.d.ts"],
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["es2022", "DOM"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true
  }
}
